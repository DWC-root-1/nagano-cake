<div class="container">
  <div class="row my-5">
    <div class="col-4 d-flex justify-content-center">

      <%= image_tag @item.get_item_image(330, 220) %><br />
    </div>
    <div class="col-7 offset-1">
      <h2 style="font-weight: bold;"><%= @item.name %></h2>
      <p style="font-size: 20px;"><%= @item.introduction %></p><br />

      <div class="d-flex align-items-end">
        <h4 class="mb-0">¥<%= number_with_delimiter(@item.with_tax_price) %></h4>
        <p class="mb-0">(税込)</p>
      </div>
    </div>
  </div>
  <div class="row justify-content-end">
      <% if @item.is_active? %>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
            <%= f.hidden_field :item_id, :value => @item.id %>

            <%= f.select :amount, *[1..10], include_blank: '個数選択',class: "custom-select" %>
            <%= f.submit 'カートに入れる', class: 'btn btn-success' %>
        <% end %>
      <% end %>

  </div>
</div>