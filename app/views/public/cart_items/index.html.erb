<h3>ショッピングカート</h3>

<%= link_to 'カートを空にする', "#", "data-confirm" => "カート内にある全ての商品が削除されてしまいます。\n本当に削除してもよろしいでしょうか？" , class: "btn btn-sm btn-danger" %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if current_customer.cart_items.present? %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.image, size: "30x30" %> 　<%= cart_item.item.name %></td>
          <td><%= number_with_delimiter((cart_item.item.price * 1.1).floor) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
               <!--f.select "#" -->
               <%= cart_item.amount %>
              <%= f.submit '変更', class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td><%= number_with_delimiter(cart_item.item.price * cart_item.amount) %></td>
          <td><%= link_to '削除する', cart_item_path(cart_item.item_id), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <td>
      <%= link_to '買い物を続ける', root_path, class: "btn btn-sm btn-primary" %>
    </td>
    <td>合計金額</td>
    <% total_price = 0 %>
    <% @cart_items.each do |cart_item| %>
      <% total_price += cart_item.item.price * cart_item.amount %>
    <% end %>
    <td><%= number_with_delimiter(total_price) %></td>
  </tr>
</table>

<%= link_to '情報入力に進む', "#", class: "btn btn-sm btn-success" %>
