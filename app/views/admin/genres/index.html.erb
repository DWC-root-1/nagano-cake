<%= flash[:notice] %>
<h1>ジャンル一覧・追加</h1>
<div>
  <div>
  <%= form_with model: @genre,url: admin_genres_path do |f| %>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name, placeholder: 'ジャンル名' %>
    <%= f.submit '新規登録' %>
  <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>