<div class="container">
  <div class="row py-4 pr-3">
    <div class="col-3 offset-1 bg-light text-center">
      <h3>ジャンル編集</h3>
      <%= render 'layouts/error', object: @genre %>
    </div>
  </div>

  <div class="row">
    <div class="col py-4 ml-5">
      <%= form_with model: @genre,url: admin_genre_path(@genre), method: :patch do |f| %>
        <%= f.label :name, "ジャンル名", class: "ml-2" %>
        <%= f.text_field :name, placeholder: 'ジャンル名', class: "mx-5 w-25" %>
        <%= f.submit '変更を保存', class: "btn btn-sm btn-success col-2 py-2 my-3", style: "font-weight: bold; font-size: 18px;" %>
      <% end %>
    </div>
  </div>
</div>