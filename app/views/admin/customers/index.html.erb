<h1>会員一覧</h1>

<% @customers.each do |customer| %>
<table>
  <tr>
    <td>会員ID</td>
    <td>氏名</td>
    <td>メールアドレス</td>
    <td>ステータス</td>
  </tr>
  <tr>
    <td><%= customer.id %></td>
    <td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer) %></td>
    <td><%= customer.email %></td>
    <td><%= customer.is_active ? "有効" : "無効" %></td>
  </tr>
</table>
<% end %>

