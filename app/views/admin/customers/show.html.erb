<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="col-4 my-5 bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>

      <div class="col-sm-12 col-md-10 col-lg-8">

        <table class="table table-borderless">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>

          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>

          <tr>
            <td>会員ステータス</td>
            <% if @customer.is_active %>
              <td class="text-success"><b>有効</b></td>
            <% else %>
              <td class="text-secondary"><b>退会</b></td>
            <% end %>
          </tr>

          <tr>
            <td></td>
            <td>
              <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success px-3" %>
            </td>
            <!--空リンク-->
            <td><%= link_to "注文履歴一覧を見る", orders_path, class:"btn btn-primary px-3" %></td>
          </tr>

        </table>

      </div>

    </div>
  </div>
</div>