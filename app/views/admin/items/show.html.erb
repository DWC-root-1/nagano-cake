<h2>商品詳細</h2>

<%= image_tag @item.get_item_image(100, 100) %>

<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre_id.name %></td>
  </tr>
  <tr>
    <td>税込価格<br />(税抜価格)</td>
    <td><%= @order_detail.including_tax ) %>（<%= @item.price %>）円</td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td><%= @item.is_active %></td>
  </tr>
</table>

<%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>
