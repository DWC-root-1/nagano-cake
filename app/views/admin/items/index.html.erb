<div class="container">
  <div class="row m-2">
    <div class="col">
      <h3 class="my-3">商品一覧</h3>
    </div>
    <div class="col m-auto">
      <%= link_to '+', new_admin_item_path, class: "btn btn-outline-dark rounded-circle ml-auto" %>
    </div>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= number_with_delimiter(item.price) %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active? %>
              <td class="text-success"><b>販売中</b></td>
            <% else %>
              <td class="text-danger"><b>販売停止中</b></td>
            <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- 1ページ当たりの表示数が10個のペネトレーション設定 -->
      <%= paginate @items %>
    </div>
  </div>
</div>