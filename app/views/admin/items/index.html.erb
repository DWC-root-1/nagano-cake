<div class="container">
  <div class="row py-4 pr-3">
    <div class="col-2 offset-1 bg-light text-center">
      <h3>商品一覧</h3>
    </div>
    <div class="offset-8 text-right">
      <%= link_to '+', new_admin_item_path, class: "btn btn-outline-dark rounded-circle ml-auto shadow" %>
    </div>
  </div>
  <div class="row">
    <div class="col-11 mx-auto">
      <table class='table table-hover table-inverse border-bottom'>
        <tr class="bg-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>

        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id), style: "color: black; border-bottom: solid 1px" %></td>
          <td><%= number_with_delimiter(item.price) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_active? %>
            <td><b class="text-success">販売中</b></td>
          <% else %>
            <td><b class="text-secondary">販売停止中</b></td>
          <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <!-- 1ページ当たりの表示数が10個のペネトレーション設定 -->
  <%= paginate @items %>
</div>